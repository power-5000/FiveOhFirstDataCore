@implements ICalendar
@inherits ComponentBase
@inject AdvancedRefreshService _refresh

<div class="container-fluid bg-light">
    <div class="row">
        <div class="col-md-4 text-center text-md-start">
            <div class="btn-group" role="group" aria-label="Previous Next Button">
                <button type="button" class="btn btn-primary">
                    <span class="oi oi-chevron-left" aria-aria-hidden="true" @onclick="Previous"></span>
                </button>
                <button type="button" class="btn btn-primary">
                    <span class="oi oi-chevron-right" aria-aria-hidden="true" @onclick="Next"></span>
                </button>
            </div>
            <button class="btn btn-primary" @onclick="Today">Today</button>
        </div>
        <div class="col-md-4 text-center text-md-center">
            <div class="fs-4">
                @switch (SelectedView)
                {
                    case 0:
                        @(StartDate.ToString("MMMM yyyy"))
                        break;
                    case 1:
                        @(StartDate.ToString("MM/dd/yyyy") + "-" + EndDate.ToString("MM/dd/yyyy"))
                        break;
                    case 2:
                        @(StartDate.ToString("MM/dd/yyyy"))
                        break;
                    case 3:
                        <div>Task List</div>
                        break;
                }
            </div>
        </div>
        <div class="col-md-4 text-center text-md-end">
        
            <div class="btn-group" role="group" aria-label="View Selection">

                @*TODO: Add button code here*@

            </div>
        </div>
    </div>
</div>
<div class="row">
    @switch (SelectedView)
    {
        case 0:
            <CalendarMonthView Calendar="this"></CalendarMonthView>
            break;
        case 1:
            <div></div>
            break;
        case 2:
            <div></div>
            break;
        case 3:
            <div></div>
            break;
    }
    
</div>